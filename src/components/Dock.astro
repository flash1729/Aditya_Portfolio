<style>
    /* ===== Floating Dock ===== */
    .dock {
        position: fixed;
        bottom: 24px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        gap: 2px;
        padding: 6px 10px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 50px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        z-index: 1000;
    }

    [data-theme="light"] .dock {
        background: var(--bg-secondary);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .dock-item {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: var(--text-primary);
        background: transparent;
        border: none;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
        margin: 0;
    }

    .dock-item svg {
        width: 16px;
        height: 16px;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .dock-item:hover {
        background: var(--card-hover);
    }

    .dock-item:hover svg {
        transform: translateY(-4px) scale(1.2);
        filter: drop-shadow(0 2px 8px rgba(59, 130, 246, 0.4));
    }

    /* Active State Logic */
    .dock-item.active {
        color: var(--text-primary);
    }

    .active-dot {
        display: none;
        position: absolute;
        bottom: 4px;
        left: 50%;
        transform: translateX(-50%);
        width: 3px;
        height: 3px;
        background-color: var(--text-primary);
        border-radius: 50%;
    }

    .dock-item.active .active-dot {
        display: block;
    }

    /* Dock Tooltips */
    .dock-item::before {
        content: attr(title);
        position: absolute;
        bottom: calc(100% + 12px);
        left: 50%;
        transform: translateX(-50%) scale(0.9);
        padding: 6px 12px;
        background: var(--text-primary);
        color: var(--bg-primary);
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 8px;
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .dock-item::after {
        content: "";
        position: absolute;
        bottom: calc(100% + 6px);
        left: 50%;
        transform: translateX(-50%);
        border: 6px solid transparent;
        border-top-color: var(--text-primary);
        opacity: 0;
        pointer-events: none;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .dock-item:hover::before,
    .dock-item:hover::after {
        opacity: 1;
        transform: translateX(-50%) scale(1);
    }

    .dock-divider {
        width: 1px;
        height: 24px;
        background: var(--border-color);
        margin: 0 6px;
        flex-shrink: 0;
    }

    /* Theme Icons Styling */
    .theme-toggle svg {
        position: absolute;
        transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    /* Default (Light Mode) - Show Moon to switch to Dark */
    .theme-toggle .sun-icon {
        opacity: 0;
        transform: rotate(90deg) scale(0);
    }

    .theme-toggle .moon-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    /* Dark Theme - Show Sun to switch to Light */
    :global([data-theme="dark"]) .theme-toggle .sun-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    :global([data-theme="dark"]) .theme-toggle .moon-icon {
        opacity: 0;
        transform: rotate(-90deg) scale(0);
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {
        .dock {
            padding: 8px 12px;
            bottom: 16px;
            border-radius: 40px;
        }

        .dock-item {
            width: 36px;
            height: 36px;
            margin: 0 1px;
        }

        .dock-item svg {
            width: 16px;
            height: 16px;
        }

        .dock-item:hover {
            transform: translateY(-6px) scale(1.1);
        }

        .dock-divider {
            height: 20px;
            margin: 0 4px;
        }

        .dock-item::before,
        .dock-item::after {
            display: none;
        }
    }
</style>

<script>
    // Logic for setting active state based on current URL
    const navHome = document.getElementById("nav-home");
    const navBlog = document.getElementById("nav-blog");
    const navLife = document.getElementById("nav-life");
    const path = window.location.pathname;

    if (path === "/" || path === "") {
        navHome?.classList.add("active");
    } else if (path.includes("/blog")) {
        navBlog?.classList.add("active");
    } else if (path.includes("/life")) {
        navLife?.classList.add("active");
    }

    // Toggle Theme Logic
    const themeToggle = document.getElementById("theme-toggle");
    themeToggle?.addEventListener("click", () => {
        const isDark =
            document.documentElement.getAttribute("data-theme") === "dark";
        const newTheme = isDark ? "light" : "dark";

        if (newTheme === "dark") {
            document.documentElement.setAttribute("data-theme", "dark");
        } else {
            document.documentElement.removeAttribute("data-theme");
        }
        localStorage.setItem("theme", newTheme);

        // Dispatch event for other components if needed
        window.dispatchEvent(new Event("theme-changed"));
    });
</script>
